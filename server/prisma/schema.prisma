generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  nickname  String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transactions Transaction[]
}

model Transaction {
  id           String   @id @default(uuid())
  amount       Float
  type         String   // "income" | "expense"
  categoryId   String
  categoryName String
  date         DateTime
  note         String?
  
  userId       String
  user         User     @relation(fields: [userId], references: [id])

  createdAt    DateTime @default(now())
}
